/* pages/alumni/alumni.wxss */
.user-info-container {
  display: flex;
  flex-direction: row;
  padding: 10rpx;
  border: 1rpx solid rgba(194, 209, 242, 0.5);
  background: rgba(194, 209, 242, 0.5);
  border-radius: 30rpx;
  margin: 10rpx  
}

.welcome-container{
  display: flex;
  flex-direction: column;
}

.welcome-info{
  font-size: 65rpx;
}

.guide-info{
  font-size: 35rpx;
  color: gray
}

.user-info{
  display: flex;
  flex-direction: column;
  margin-left: 200rpx;
  align-items: center;
}

.user-avatar{
  width: 81rpx;
  height: 81rpx;
  margin: 5rpx;
  border-radius: 50%
}

.user-nickname{
  font-size: 25rpx
}

.info-list-container{
  display: flex;
  flex-direction: row;
}

.alumni-info-list{
  border-top: 6rpx solid rgba(194, 209, 242, 0.5);
  margin: 20rpx auto;
  /* padding-left: 10rpx; */
  padding-top: 20rpx; 
   height: 880rpx; 
}

.group-index-letter {
  display: block;
  background: #c2d1f2;
  width: 100%;
}

.alumni-simple-info {
  display: flex;
  flex-direction: row;
  margin-top: 15rpx;
  /* margin-bottom: 15rpx; */
  border-bottom: 1rpx solid #c2d1f2; 
}

.name-info-container {
  display: flex;
  flex-direction: column;
  margin-left: 35rpx;
  margin-bottom: 10rpx;
}

.alumni-avatar {
  width: 81rpx;
  height: 81rpx;
  border-radius: 50%;
  margin-left: 10rpx;
  border: 1rpx solid #c2d1f2
}

.alumni-name {
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-weight: 600;  
}

.alumni-description {
  color: gray; 
  font-size: 30rpx;
}

.letter-selector-container { 
  margin-top: 10rpx;
  padding-top: 10rpx;
  padding-right: 5rpx;
  padding-bottom: 10rpx;
  display: flex;
  border-radius: 10rpx;
  flex-direction: column;
}

.letter-selector-container:hover{
  background: #cfcfcf;
}

.letter{
  text-align: center;
  font-size: 25rpx;
}

.modal-container {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(25, 25, 25, 0.4);
  overflow: hidden;
}

.alumni-detail-modal {
  display: flex;
  flex-direction: column;
  margin: 30% 10%;
  width: 80%;
  height: 60%;
  background: rgba(255, 255, 255, 1);
  border-radius: 25rpx;
  animation: expand 0.5s 1
}
.error-message-container {
  position: fixed; 
  display: flex;
  flex-direction: column;  
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.refresh-icon {
  width: 100rpx;
  height: 100rpx;
}


@keyframes expand{
  0% {
    width: 0%;
    height: 0%;
    margin: 50% 50%;
  }
  100% {
    width: 80%;
    height: 60%;
    margin: 30% 10%;
  }
}